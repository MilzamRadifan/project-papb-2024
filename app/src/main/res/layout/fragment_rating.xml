<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000519"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Activity.Home.RatingFragment">

    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/tvJudul"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:text="Rate This Movie"
        android:textAlignment="center"
        android:textSize="13dp"
        android:textColor="#fbfdff"
        android:textStyle="" />

    <TextView
        android:id="@+id/tvJudul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rbRatingBar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:textColor="#fbfdff"
        android:text=""
        android:textStyle="bold"
        android:textSize="27dp"
        android:textAlignment="center"/>

    <RatingBar
        android:id="@+id/rbRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:numStars="5"
        android:progressTint="#E91E63"
        android:progressBackgroundTint="@color/white"
        android:stepSize="1" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rbRatingBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:paddingHorizontal="30dp"
        android:background="@drawable/bg_button_white"
        android:text="Proceed to Review" />

    <Button
        android:id="@+id/btnDeleteRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSubmit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="30dp"
        android:background="@drawable/bg_button_white"
        android:text="Delete Review"
        android:visibility="gone" />
</RelativeLayout>
